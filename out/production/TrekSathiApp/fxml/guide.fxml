<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.treksathi.controllers.GuideController"
            prefWidth="800" prefHeight="600">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #4CAF50; -fx-padding: 15;">
            <Label text="Welcome, Guide!" style="-fx-font-size: 22px; -fx-text-fill: #333; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40;">
            <Label text="Manage your treks and availability"
                   style="-fx-font-size: 16px; -fx-text-fill: #333;" />

            <Button fx:id="availabilityButton" text="Set Available"
                    onAction="#toggleAvailability"
                    style="-fx-font-size: 14px; -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-padding: 10 20;" />
        </VBox>
    </center>
</BorderPane>

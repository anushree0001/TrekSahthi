<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.image.Image?>
        <?import javafx.scene.image.ImageView?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.geometry.Insets?>

<BorderPane fx:controller="com.treksathi.controllers.WelcomeController"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            prefWidth="800" prefHeight="600">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #333;" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <ImageView fitHeight="50" fitWidth="120">
                <Image url="@/images/logo.jpg"/>
            </ImageView>
            <Button text="Dashboard"
                    onAction="#handleDashboard"
                    style="-fx-font-size: 14px; -fx-padding: 6 12; -fx-background-color: white; -fx-text-fill: #4CAF50; -fx-background-radius: 5;" />

            <Button fx:id="attractionsButton" text="Attractions" onAction="#handleAttractions" styleClass="btn-default"/>
<!--            <Button fx:id="bookingDetailsButton" text="Booking Details" onAction="#handleBookingDetails" styleClass="btn-default"/>-->
            <Button fx:id="signupButton" text="SignUp" onAction="#handleSignup" styleClass="btn-signup"/>
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="btn-login"/>
        </HBox>
    </top>

    <!-- Center Content (with left and right images aligned using HBox) -->
    <center>
        <HBox alignment="CENTER" spacing="40">
            <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>

            <!-- Left Column -->
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitWidth="220" preserveRatio="true">
                    <Image url="@/images/left1.jpeg"/>
                </ImageView>
                <ImageView fitWidth="220" preserveRatio="true">
                    <Image url="@/images/left2.jpg"/>
                </ImageView>
            </VBox>

            <!-- Middle Content -->
            <VBox alignment="CENTER" spacing="20">
                <Label text="Welcome to TrekSathi" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label text="Where every trek begins with a single click. See the beauty of Nepal."
                       style="-fx-font-size: 16px;" wrapText="true" maxWidth="500"/>
                <ImageView fitWidth="500" preserveRatio="true">
                    <Image url="@/images/FrontpageScene.jpg"/>
                </ImageView>
                <ImageView fitWidth="320" preserveRatio="true">
                    <Image url="@/images/Scene2.jpg"/>
                </ImageView>
            </VBox>

            <!-- Right Column -->
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitWidth="220" preserveRatio="true">
                    <Image url="@/images/right11.jpg"/>
                </ImageView>
                <ImageView fitWidth="220" preserveRatio="true">
                    <Image url="@/images/right22.jpg"/>
                </ImageView>
            </VBox>

        </HBox>
    </center>

</BorderPane>
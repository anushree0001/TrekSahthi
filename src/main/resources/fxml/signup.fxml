<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.treksathi.controllers.SignupController">



    <!--  Foreground Signup Content -->
    <VBox styleClass="main-container" spacing="20" alignment="CENTER"
          StackPane.alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!--  Header Section with Green Background -->
        <VBox styleClass="header-section" alignment="CENTER" spacing="20" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets/>
            </VBox.margin>

            <!-- Form Container -->
            <VBox styleClass="form-container" alignment="CENTER" spacing="20" maxWidth="450">
                <VBox.margin>
                    <Insets top="30" bottom="30" left="30" right="30"/>
                </VBox.margin>

                <!--  Title and Login Link -->
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="titleLabel" text="Create new Account" styleClass="header-title"/>
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already Registered?" styleClass="header-subtitle"/>
                        <Hyperlink fx:id="loginLink" onAction="#handleLoginLink" text="Login" styleClass="header-link"/>
                    </HBox>
                </VBox>

                <!--  Form Fields -->
                <VBox alignment="CENTER" spacing="25" maxWidth="Infinity">
                    <VBox.margin>
                        <Insets top="20"/>
                    </VBox.margin>

                    <!-- Name -->
                    <VBox alignment="CENTER_LEFT" spacing="8" maxWidth="Infinity">
                        <Label text="USERNAME" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Anushree Pradhan"
                                   styleClass="custom-text-field" maxWidth="Infinity"/>
                    </VBox>

                    <!-- Password -->
                    <VBox alignment="CENTER_LEFT" spacing="8" maxWidth="Infinity">
                        <Label text="PASSWORD" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="******"
                                       styleClass="custom-password-field" maxWidth="Infinity"/>
                    </VBox>

                    <!-- Role Selection -->
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="CHOOSE" styleClass="field-label"/>
                        <HBox alignment="CENTER" spacing="15" styleClass="role-tabs-container">
                            <Button fx:id="guideButton" text="Guide" onAction="#handleGuideSelection"
                                    styleClass="role-tab"/>
                            <Button fx:id="touristButton" text="Tourist" onAction="#handleTouristSelection"
                                    styleClass="role-tab"/>
                        </HBox>
                    </VBox>

                    <!-- Sign Up Button -->
                    <Button fx:id="signupButton" text="sign up" onAction="#handleSignup"
                            styleClass="signup-button" maxWidth="Infinity"/>

                    <!-- Status -->
                    <Label fx:id="statusLabel" styleClass="status-label"/>
                </VBox>
            </VBox>
        </VBox>

        <!-- ðŸ”¸ Language Switch -->
        <AnchorPane>
            <HBox alignment="CENTER_RIGHT" spacing="5" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20">
                <Button fx:id="languageButton" onAction="#toggleLanguage"
                        text="En" styleClass="language-btn-active"/>
            </HBox>
        </AnchorPane>

    </VBox>
</StackPane>